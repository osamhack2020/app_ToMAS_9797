<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape_type1"
            android:drawableTop="@drawable/ic_baseline_menu_book_48"
            android:fontFamily="@font/gotham"
            android:paddingTop="60dp"
            android:text="자기개발"
            android:textSize="@dimen/extra_large_text"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#009688"
            android:layout_marginLeft="10dp"/>/>


        <Button
            android:id="@+id/home_btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape_type1"
            android:drawableTop="@drawable/ic_baseline_textsms_48"
            android:fontFamily="@font/gotham"
            android:paddingTop="60dp"
            android:text="게시판"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#009688"
            android:textSize="@dimen/extra_large_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_btn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape_type1"
            android:drawableTop="@drawable/ic_baseline_storefront_48"
            android:fontFamily="@font/gotham"
            android:paddingTop="60dp"
            android:text="플리마켓"
            android:textSize="@dimen/extra_large_text"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#009688"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/home_btn4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape_type1"
            android:drawableTop="@drawable/ic_baseline_group_add_48"
            android:fontFamily="@font/gotham"
            android:paddingTop="60dp"
            android:text="인원모집"
            android:textColor="#009688"
            android:textSize="@dimen/extra_large_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
</LinearLayout>